<script type="text/javascript" src="/plugins/layui/layui.all.js"></script>
<link type="text/css" rel="stylesheet" href="/plugins/layui/css/layui.css" />
<style>
    #headerCart {
        color: rgb(253, 247, 247);
    }
</style>
<div id="header">
    <!-- 辅助导航-->
    <div id="barTop">
        <div>
            <div id="wel">
                <p>welcome to little bag!</p>
            </div>
            <div id="rightL">
                <div id="user">
                    <% if(user){ %>
                    <img class='userHead' src='<%= headImage %>' alt='' />
                    <span class='usernm'><%=user %></span>
                    <% }else{ %>
                    <span onclick=login()>请登录</span>
                    <span>|</span>
                    <span onclick=zhuce()>快速注册</span>
                    <% } %>
                </div>
                <div id="cart">
                    <span><a id="headerCart" href="cart.html">购物车</a></span>
                </div>
            </div>
        </div>
    </div>
    <!-- 导航条-->
    <ul id="nav">
        <li><a href="index.html">首页</a></li>
        <li><a href="#">本季新品</a></li>
        <li><a href="index.html"><img src="images/logo.jpg" alt="这是本网站的Logo" /></a></li>
        <li><a href="#">经典系列</a></li>
        <li><a href="#">关于我们</a></li>
    </ul>
    <!------------------------登录注册----------------->
    <div id="Box">
        <!--登录-->
        <!--<form action="#" method="get">-->
        <div id="loginBox">
            <form id="LoginForm">
                <img src="images/loginimg/logo1.jpg" class="logo1">
                <img src="images/loginimg/guanbi.jpg" class="close" onclick=close1();>
                <p class="txt1">登录</p>
                <p class="switch" onclick=switchZhuce();>切换注册</p>
                <p>
                    <input type="text" name="user" id="loginUser" placeholder="&nbsp; 请输入用户名或邮箱">
                    <img src="images/loginimg/user.jpg" class="pic1">
                </p>
                <p>
                    <input type="password" name="password" id="loginPwd" placeholder="&nbsp; 请输入密码">
                    <img src="images/loginimg/pass.jpg" class="pic2">
                </p>
                <p>
                    <input type="checkbox" checked="checked" id="check">
                <p class="rember">记住我</p>
                </p>
                <p class="forget">忘记密码？</p>
                <p>
                    <input type="button" value="登录" name="loginBtn" id="loginBtn">
                </p>
            </form>
        </div>
        <!--</form>-->

        <form id="registerForm" action="/registerForm" method="post">
            <div id="zhuceBox">
                <img src="images/loginimg/logo1.jpg" class="logo1">
                <img src="images/loginimg/guanbi.jpg" class="close" onclick=close1();>
                <p class="txt1">注册</p>
                <p class="switch" onclick=switchLogin();>切换登录</p>
                <input type="text" name="Email" id="Email" placeholder="&nbsp; 请输入常用邮箱">
                <img src="images/loginimg/mail.jpg" class="pic1">
                <input type="text" name="zhuceUser" id="zhuceUser" placeholder="&nbsp; 请设置用户名">
                <img src="images/loginimg/user.jpg" class="pic2">
                <input type="password" name="zhucePwd" id="zhucePwd" placeholder="&nbsp; 请设置密码">
                <img src="images/loginimg/pass.jpg" class="pic3">
                <input type="password" name="resPwd" id="resPwd" placeholder="&nbsp; 请再次输入密码">
                <img src="images/loginimg/repass.png" class="pic4">
                <input type="button" value="注册" name="zhuceBtn" id="zhuceBtn">
            </div>
        </form>
    </div>
</div>
<script src="js/jquery.3.4.0.js"></script>
<script src="js/login.js"></script>